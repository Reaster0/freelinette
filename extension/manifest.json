{

  "manifest_version": 2,
  "name": "Freelinette",
  "version": "1.0",

  "description": "Testing tool helping PO to record their tests.",

  "icons": {
    "48": "icons/border-48.png",
    "96": "icons/border-96.png"
  },

  "browser_action": {
	"default_icon": "icons/border-48.png",
	"default_popup": "./popup/popup.html"
  },

  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": [
        "node_modules/html-element-picker/dist/ElementPicker.js",
        "picker.js"
      ]
    }
  ]

}
